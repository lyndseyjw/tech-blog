<main>
  <div class='center-heading'>
    <h2>Signup</h2>
    <form class="form signup-form">
      <div class="form-group left-text">
        <label for="username-signup">Username</label>
        <input class="form-input" type="text" id="username-signup" />
      </div>
      <div class="form-group left-text">
        <label for="password-signup">Password</label>
        <input class="form-input" type="password" id="password-signup" placeholder="Must be at least 8 characters" />
      </div>
      <div class="form-group">
        <button class="postButtons" type="submit">Signup!</button>
      </div>
      <a href="/login" class="underline">Login Instead</a>
    </form>
  </div>
</main>

<script src="/js/signup.js"></script>